# Redis
REDIS_DSN=redis://:password@localhost:6379/0

# Auth / Security
ALGORITHM=HS256
AUTH_SECRET=change-me-super-secret
REFRESH_TOKEN_EXPIRATION_SECONDS=604800

# AWS
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_SESSION_TOKEN=optional-session-token
AWS_SIGNATURE_VERSION=s3v4
AWS_ENDPOINT_URL=https://s3.amazonaws.com

# Celery / Queue
CELERY_QUEUE_URL=redis://:password@localhost:6379/1

# Environment
ENVIRONMENT=development

# Google OAuth2
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH2_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ML / NLP
SBERT_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
